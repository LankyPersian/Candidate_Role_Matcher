<body>
  <div class="container">
    <h2>Candidate Information System Remover</h2>
    <p class="lead">Enter candidate details and choose the request type.</p>

    <form id="cisrForm" class="grid" novalidate>
      <div class="row">
        <div>
          <label for="firstName">First name</label>
          <input id="firstName" name="firstName" type="text" autocomplete="given-name" required />
        </div>
        <div>
          <label for="surname">Surname</label>
          <input id="surname" name="surname" type="text" autocomplete="family-name" required />
        </div>
      </div>

      <div>
        <label for="email">Email address</label>
        <input id="email" name="email" type="email" inputmode="email" autocomplete="email" required />
      </div>

      <fieldset>
        <legend>Request type</legend>
        <div class="radio">
          <label><input type="radio" name="requestType" value="dnd" required /> Do Not Disturb (DND)</label>
          <label><input type="radio" name="requestType" value="remove" /> Remove from system completely</label>
        </div>
      </fieldset>

      <button type="submit">Submit</button>

      <p class="notice"><strong>Demo notice:</strong> This interface is for demonstration purposes only.</p>

      <div id="status" class="alert" role="status" aria-live="polite"></div>
    </form>

    <p class="muted" style="margin-top:8px;font-size:.8rem">No data is stored or transmitted in this demo.</p>
  </div>

  <script>
    (function () {
      const form = document.getElementById('cisrForm');
      const statusEl = document.getElementById('status');
      let submitCount = 0;

      function showMessage(text, type) {
        statusEl.className = 'alert ' + (type === 'error' ? 'error' : 'warn');
        statusEl.textContent = text;
        statusEl.style.display = 'block';
      }

      function disableForm() {
        Array.from(form.elements).forEach(el => el.disabled = true);
      }

      form.addEventListener('submit', (e) => {
        e.preventDefault();
        if (!form.reportValidity()) return;

        submitCount += 1;

        if (submitCount === 1) {
          showMessage('Candidate not found in system. Check their name and email address.', 'error');
        } else {
          showMessage('Candidate removed from database but not from Hexona system. An email has been sent to the candidate confirming this.', 'warn');
          disableForm();
        }
      });
    })();
  </script>
